<div id="content-wrapper" class="d-flex flex-column mt-4">
    <div class="content-body">
        <div class="container-fluid">
            <div class="row">
              <div class="col-md-12">
                  <div class="card">
                      <div class="card-body">
                          <h4 class="card-title">Topic Details(Corresponding Feedbacks that has word <strong>'<%= params[:word]%>'</strong>)</h4>
                          <div class="table-responsive">
                              <table class="table header-border table-hover verticle-middle">
                                  <thead>
                                      <tr>
                                          <th scope="col" style='width: 60%;'>Feedback</th>
                                          <th scope="col">Score</th>
                                          <th scope="col">Thumbs up count</th>
                                          <th>Postive/Negative</th>
                                      </tr>
                                  </thead>
                                  <tbody>
                                      <% @feed_backs.each do |feed_back| %>
                                        <tr>
                                            <td><%= feed_back['feedback'] %></td>
                                            <td><%= feed_back['score'] %></td>
                                            <td><%= feed_back['thumbs_up_count'] %></td>
                                            <td>
                                                <% if feed_back['type'] == 'negative' %>
                                                    <button class='btn btn-danger'>Negative feedback</button>
                                                <% elsif feed_back['type'] == 'positive' %>
                                                    <button class='btn btn-success'>Positive Feedback</button>
                                                <% elsif feed_back['type'] == 'neutral' %>
                                                    <button class='btn btn-primary'>Neutral Feedback</button>  
                                                <% end %>
                                            </td>
                                        </tr>
                                      <% end %>
                                  </tbody>
                              </table>
                          </div>
                      </div>
                  </div>
              </div>
            </div>
        </div>
        <!-- #/ container -->
    </div>
</div>
